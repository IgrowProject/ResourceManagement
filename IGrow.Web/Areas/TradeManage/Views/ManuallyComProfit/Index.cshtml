@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Index.cshtml";
}
<script>
    $(function () {
        gridList();
    })
    function gridList() {
        $('#dg').datagrid({
            url: '/TradeManage/ManuallyComProfit/GetComInfo',
            toolbar: '#toolbar',
            //hideColumn: "IGrowID",
            autoRowHeight: false,
            nowrap: true,
            singleSelect: true,
            rownumbers: true,//行号
            striped: true,//交替显示背景
            method: 'post',
            pagination: true,
            pageSize: 20,
            queryParams: {
                startTime: "2019-12-17",
                endTime:"2019-12-21"
            },
            columns: [[
                //{ field: 'IGrowID', hidden: true },
                { field: 'SpuID', title: '商品id', width: 80, align: 'center' },
                { field: 'Code', title: 'SPU', width: 80, align: 'center' },
                { field: 'SkuName', title: 'SKU', width: 80, align: 'center' },
                { field: 'PurchasePrice', title: '新成本', width: 80, align: 'center' },
                { field: 'Price', title: '售价', width: 80, align: 'center' },
                { field: 'Amount', title: 'SKU支付件数', width: 80, align: 'center' },
                //{ field: 'OnProfit06', title: 'SKU销售额', width: 80, align: 'center' },
                //{ field: 'OnProfit07', title: 'SPU销售额', width: 80, align: 'center' },
                //{ field: 'OnProfit08', title: 'SKU/SPU占比', width: 80, align: 'center' },
                //{ field: 'OnProfit09', title: 'SKU/总 占比', width: 80, align: 'center' },
                //{ field: 'Description', title: '销量/总 占比', width: 200, align: 'center' },
                //{ field: 'Description', title: 'SPU/总销售', width: 200, align: 'center' },
                //{ field: 'Description', title: '毛利', width: 200, align: 'center' },
                //{ field: 'Description', title: 'SPU毛利率', width: 200, align: 'center' },
                //{ field: 'Description', title: 'SKU毛利值', width: 200, align: 'center' },
                //{ field: 'Description', title: '毛利汇总', width: 200, align: 'center' }
            ]]
        });

        $("#btn_search").click(function () {
            var queryJson = {
                keyword: $("#txt_keyword").val()
            }
            $('#dg').datagrid('load', queryJson);
        });
    }

 
</script>

<div class="gridPanel" style="height:100%;">
    <div id="toolbar" style="padding:8px 15px;">            
        <div class="dcui-search-area">
            开始时间：
            <input class="easyui-datebox" labelPosition="top" style="width:100px;">
            &nbsp;&nbsp;结束时间：
            <input class="easyui-datebox" labelPosition="top" style="width:100px;">
            &nbsp;&nbsp;关键字: <input class="easyui-textbox" style="width:110px" id="txt_keyword" placeholder="请输入要查询关键字">
            <a href="#" class="easyui-linkbutton" iconCls="icon-search" id="btn_search">查询</a>
        </div>
    </div>

    <table id="dg" class="easyui-datagrid" style="width:100%;min-height:600px;height:100%;"></table>
</div>
